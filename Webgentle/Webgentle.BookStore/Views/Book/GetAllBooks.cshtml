@model IEnumerable<BookModel>
@{
    ViewData["title"] = "Book";
}
@{
    var parmas = new Dictionary<string, string>()
    {
        { "name","king"},
        { "age","14"}
    };
}
<div class="container">
    <h3> all books</h3>
    <div class="row g-3">

        @foreach(var book in Model)
        {
            <div class="col-md-3">
                <div class="card h-100">
                    <img src="@book.CoverImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a 
                                asp-route-id="@book.Id"
                                asp-route="bookDetailsRoute"
                                class="btn btn-sm btn-outline-secondary"> 
                                view Detail
                            </a>
                        </div>
                        <small class="text-body-secondary">@book.Author</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section script{
    <script>
        $(() => {
            console.log("document is ready");
        });
    </script>
}