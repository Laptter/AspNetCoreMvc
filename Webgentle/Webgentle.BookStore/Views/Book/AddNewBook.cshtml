@using Webgentle.BookStore.Enums
@model BookModel
@{
    ViewData["title"] = "Add New Book";
}
<div class="container">
    <h3 class="display-4">Add new book</h3>
    <hr />
    @if (ViewBag.IsSuccess==true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Holy guacamole!</strong> You should check in on some of those fields below.
            Click <a asp-controller="book" asp-action="GetBook" asp-route-id="@ViewBag.BookId">here</a> to view the details
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <form method="post" asp-controller="book" asp-action="addNewBook">

        <div>
            <label asp-for="LanguageEnum" class="form-control-plaintext"></label>
            <select asp-for="LanguageEnum" class="form-control dropdown" asp-items="Html.GetEnumSelectList<Language>()">
                <option value="">please choose book language</option>
            </select>
            <span asp-validation-for="LanguageEnum" class="text-danger"></span>
        </div>

        <div >
            <label asp-for="Title" class="form-control-plaintext"></label>
            <input class="form-control" asp-for="Title" placeholder="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div >
            <label asp-for="Author" class="form-control-plaintext"></label>
            <input class="form-control" asp-for="Author" placeholder="Author">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div >
            <label asp-for="Description" class="form-control-plaintext"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div >
            <label asp-for="TotalPages" class="form-control-plaintext"></label>
            <input type="number" class="form-control" asp-for="TotalPages" placeholder="TotalPages">
            <span asp-validation-for="TotalPages" class="text-danger"></span>
        </div>

        <div class="form-control-plaintext">
            <input type="submit" value="Add Book" class="btn btn-primary" />
        </div>
    </form>
</div>

